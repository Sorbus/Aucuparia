<% content_for :head do %>
	<title><%= @user.display_name %></title>
<% end %>

<div class="content">
	<p class="definition">
		<strong>Identity</strong> - <em>n</em>. 
	</p>
	<hr>
	<p>
		<% if !@user.use_icon? %>
			<%= link_to_if(@user.website?, '<i class="fa fa-'.html_safe + icon[@user.icon.to_i] + ' fa-4x right"></i>'.html_safe, @user.website) %><strong>Name:</strong>
		<% else %>
			<%= link_to_if(@user.website?, '<i class="user-image user-4x right">&nbsp</i>'.html_safe, @user.website) %><strong>Name:</strong>
		<% end %>
		<%= @user.display_name %>
	</p>
	
	<% if can?(:see_email, @user) %>
	<p>
		<strong>Email:</strong>
		<%= @user.email %>
	</p>
	<% end %>
	
	<p>
		<strong>Biography:</strong>
		<%= markdown(@user.biography.to_s).html_safe %>
	</p>
	
	<% if can?(:timestamp, @user) %>
	<p>
		<strong>Account created at:</strong>
		<%= @user.created_at %>
	</p>
	<% end %>
	
	<p>
		<strong>Authored Items:</strong>
	</p>
	
	<% @posts.each do |item| %>
		<hr>
		<div class="entry">
			<span class="actions">
				<%= item.created_at.strftime("%a %b %d, %Y") %><br>
				<% if can? :update, item %>
					<%= link_to '<i class="fa fa-edit fa-lg"></i>'.html_safe, edit_item_path(item) %>
					<span class="htab"></span>
					<%= link_to '<i class="fa fa-times fa-lg"></i>'.html_safe, item_path(item),method: :delete,data: { confirm: 'Are you sure?' } %>
				<% end %>
			</span>
			<div class="title">
				<%= link_to item.title, item_path(item) %>
			</div>
			<div class="sample">
				<%= markdown(item.summary).html_safe %>
			</div>
		</div>
	<% end %>
	<%= will_paginate @posts =%>
</div>