@mixin transition($time, $attribute) {
	-moz-transition: $attribute $time ease-in-out;
	-webkit-transition: $attribute $time ease-in-out;
	-o-transition: $attribute $time ease-in-out;
	-ms-transition: $attribute $time ease-in-out;
	transition: $attribute $time ease-in-out;
	}

@mixin basis {
	display:inline-block;
	}

@mixin scale {
	background-size: 3em;
	background-repeat: no-repeat;
	}

#linkbar {
	height:4em;
	margin-top:1em;
	text-align:center;
	@include transition(0.5s, all);
	
	a {
		text-decoration:none!important;
		margin-left:.1em;
		margin-right:.1em;
		@include transition(0.5s, all);
		@include basis;
		
		&:first-of-type {
			margin-left:0em;
			}
			
		&:last-of-type {
			margin-right:0em;
			}
		}
	
	.fa-at:hover {
		color:#c9252c;
		}
	
	.fa-github:hover {
		color:black;
		}
		
	.fa-twitter:hover {
		color:#55acee;
		}
	}