$primary-background: rgba(239, 237, 235, 1);
$secondary-background: rgba(238, 238, 238, 1);
$primary-foreground: rgba(118, 92, 57, 1);
$secondary-foreground: rgba(132, 107, 77, 1);
$tertiary-foreground: rgba(78, 61, 38, 1);
$view-max-width: 25em;

@mixin boxy {
	max-width:$view-max-width;
	margin:0px auto;
	text-align:left;
	border:1px solid $primary-foreground;
	background-color: $secondary-background;
	color:$primary-foreground;
	margin-bottom:20px;
}

@mixin transition($time, $attribute) {
	-moz-transition: $attribute $time ease-in-out;
	-webkit-transition: $attribute $time ease-in-out;
	-o-transition: $attribute $time ease-in-out;
	-ms-transition: $attribute $time ease-in-out;
	transition: $attribute $time ease-in-out;
}

@mixin animation($time, $name){
	animation: $name $time;
    -moz-animation: $name $time;
    -webkit-animation: $name $time;
    -o-animation: $name $time;
	-ms-animation: $name $time;
}

@mixin session-core($side) {
	text-align:center;
	float:$side;
	padding-top:1em;
	padding-bottom:1em;
	border:1px solid $primary-foreground;
	background-color: $secondary-background;
	opacity:0.2;
	z-index:0;
	position:relative;
}

@mixin slide-in ($distance) {
	opacity:1;
	margin-top:$distance;
	z-index:5;
}

@charset 'UTF-8';
@import url('http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,400italic,700,900');
 
body {
		margin-top:5%;
		margin-bottom:100px;
		padding:0px;
		text-align:center;
		background-color: $primary-background;
		background-image:
			linear-gradient(60deg, rgba(0,0,0,.05) 25%, transparent 25%, transparent 75%, rgba(0,0,0,.05) 75%, rgba(0,0,0,.05)),
			linear-gradient(120deg, rgba(0,0,0,.05) 25%, transparent 25%, transparent 75%, rgba(0,0,0,.05) 75%, rgba(0,0,0,.05));
		background-size: 70px 120px;
		background-attachment: fixed;
	}
	
.cover {
	
	.left, .right {
		position:fixed;
		background-color:$primary-foreground;
		top:0px;
		z-index:-1;
		height:100%;
		width:10%;
		min-width:5px;
		max-width:140px;
		opacity:.7;
		}
		
	.left {
		left:0px;
		}
		
	.right {
		right:0px;
		}
	}
	
.content, .comments {
	@include boxy;
	text-align:left;
	padding:15px;
	position:relative;
	z-index:3;
	margin-bottom:20px;
	overflow:auto;
		
	p:first-of-type {
		margin-top:0px;
		}
	}
	
.account {
		@extend .content;
		opacity:0.5;
		@include transition(0.5s, opacity);
		
	.tools {
		float:left;
		}
		
	.logout {
		float:right;
		}
	}

.account:hover {
		opacity: 1;
	}
	
.holder {
		max-width:$view-max-width;
		margin:0px auto;
		margin-top:-3em;

	.login {
			width:10em;
			@include session-core(right);
			@include transition(0.5s, all);
		}
		
	.login:hover {
			@include slide-in(1em);
		}
	}
	
.notice-wrapper {
		width: 100%;
		position:fixed;
		left: 0;
		width: 100%;
		z-index:1;
		top:-1em;
		
	
	.notice {
			padding:1em;
			width:15em;
			margin:0px auto;
			@include session-core(center);
			@include transition(0.5s, all);
			border:1px dotted $primary-foreground;
		}
		
	.notice:hover {
			@include slide-in(1em);
		}
		
	.alert {
			padding:1em;
			width:15em;
			margin:0px auto;
			@include session-core(center);
			@include transition(0.5s, all);
			border:1px dotted red;
			background-color: #f9e3e3;
			color:red;
		}
		
	.alert:hover {
			@include slide-in(1em);
		}
	}

notifications:hover {
		top: 10px;
	}
	
.user i {
		float:left;
		margin-right:.5em;
	}

