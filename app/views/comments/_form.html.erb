<%= form_for @comment, url: item_comments_path(@item) do |f| %>
	<% if @comment.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@comment.errors.count, "error") %> prohibited this article from being saved:
			</h2>
			<ul>
				<% @comment.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<p>
		<%= f.label :new_comment %>
		<%= f.text_area :body %>
	</p>
		
	<p>
		<%= f.submit 'preview', id: "left" %>
		<%= f.submit 'commit', id: "right" %>
	</p>
	&nbsp
<% end %>