<div class="content">
	<p class="definition">
		<strong>Index</strong> - <em>n</em>. A list of items that gives for each item the location where it may be found.
		<% if can? :create, @item %>
			<span class="actions">
				<%= link_to '<i class="fa fa-plus fa-lg"></i>'.html_safe, new_item_path %>
			</span>
		<% end %>
	</p>
	<% @posts.each do |item| %>
		<hr>
		<%= render 'items/single', :item => item %>
	<% end %>
	<hr>
	<%= will_paginate @posts =%>
</div>