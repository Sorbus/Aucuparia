<% if current_user && !current_user.mailbox.notifications.blank? %>
	toastr.options = {
		"closeButton": false,
		"debug": false,
		"newestOnTop": true,
		"progressBar": false,
		"positionClass": "toast-top-right",
		"preventDuplicates": false,
		"showDuration": "5000",
		"hideDuration": "1000",
		"timeOut": "7000",
		"extendedTimeOut": "1000",
		"showEasing": "swing",
		"hideEasing": "linear",
		"showMethod": "slideDown",
		"hideMethod": "fadeOut",
	}
	<% current_user.mailbox.notifications.unread.each do |noti| %>
		toastr['<%= noti.subject %>']('<%= noti.body %>')
		<% noti.mark_as_read(current_user) %>
	<% end %>
<% end %>