<div class="content narrow">
	<p class="definition">
		<%= t(:index_definition).html_safe %>
	</p>
	<hr>
	<div class="tags">
		<% @tags.each do |tag| %>
			<div class="tag"><%= link_to tag, tag_path(tag.name), :remote => true %></div>
		<% end %>
	</div>
	<hr>
	<%= paginate @tags, :remote => true =%>
</div>