<% if  !flash.empty? %>
	toastr.options = {
		"closeButton": false,
		"debug": false,
		"newestOnTop": true,
		"progressBar": false,
		"positionClass": "toast-top-right",
		"preventDuplicates": false,
		"showDuration": "5000",
		"hideDuration": "1000",
		"timeOut": "7000",
		"extendedTimeOut": "1000",
		"showEasing": "swing",
		"hideEasing": "linear",
		"showMethod": "slideDown",
		"hideMethod": "fadeOut",
	}
	<% flash.each do |name, msg| %>
		toastr['<%= name %>']('<%= msg %>')
	<% end %>
	<% flash.clear %>
<% end %>