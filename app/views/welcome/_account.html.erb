<% if current_user %>
	<div id="account">
		<%= link_to current_user.email, user_path(current_user) %>
		<span class="tab"></span>
		<%= link_to 'edit', edit_user_path(current_user) %>
		<span class="tab"></span>
		<%= link_to 'logout', user_session_path(current_user),method: :delete,data: { confirm: 'Are you sure?' } %>
	</div>
<% end %>