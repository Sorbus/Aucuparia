<%= form_for menu, url: path do |f| %>
	<% if menu.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(menu.errors.count, "error") + ' ' + t(:save_failed) %>
			</h2>
			<ul>
				<% menu.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<p>
		<%= f.label (t :menu_title) %>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label (t :menu_visible) %>
		<%= f.check_box :visible %>
	</p>
		
	<p>
		<%= f.submit (t :commit), id: "left" %>
	</p>
<% end %>