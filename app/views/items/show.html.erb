<% content_for :head do %>
	<title><%= @item.title %></title>
<% end %>
 
<div id="content">
	<span id="actions">
		<%= link_to 'Change', edit_item_path(@item) %>
		<span class="tab"></span>
		<%= link_to 'Destroy', item_path(@item),method: :delete,data: { confirm: 'Are you sure?' } %>
	</span>
	<div id="definition">
		<strong><%= @item.title %></strong>
	</div>
	<hr>
 
	<%= markdown(@item.content).html_safe %>

	<div id="created">
		Created: <%= @item.created_at.strftime("%H:%M, %a %b %d, %Y") %><br>
		<% show_modified = (@item.created_at != @item.updated_at) %>
		<% if show_modified %>
			Modified: <%= @item.updated_at.strftime("%H:%M, %a %b %d, %Y") %>
		<% end %>
	</div>
	<div id="category">
		<%= link_to Category.find_by_id(@item.category).name, category_path(@item.category) %>
	</div>
	<% if show_modified %>
		<br>
	<% end %>
	&nbsp
</div>