<% content_for :head do %>
	<title><%= @user.display_name %></title>
<% end %>

<div id="content">
	<div id="definition">
		<strong>Identity</strong> - <em>n</em>. 
	</div>
	<p>
	  <strong>Name:</strong>
	  <%= @user.display_name %>
	</p>
	
	<p>
	  <strong>Email:</strong>
	  <%= @user.email %>
	</p>
	
	<p>
		<strong>Website:</strong>
		<%= markdown(@user.website.to_s).html_safe %>
	</p>
	
	<p>
	  <strong>Biography:</strong>
	  <%= markdown(@user.biography.to_s).html_safe %>
	</p>

	<p>
	  <strong>Login count:</strong>
	  <%= @user.login_count %>
	</p>

	<p>
	  <strong>Last request at:</strong>
	  <%= @user.last_request_at %>
	</p>

	<p>
	  <strong>Last login at:</strong>
	  <%= @user.last_login_at %>
	</p>

	<p>
	  <strong>Current login at:</strong>
	  <%= @user.current_login_at %>
	</p>

	<p>
	  <strong>Last login ip:</strong>
	  <%= @user.last_login_ip %>
	</p>

	<p>
	  <strong>Current login ip:</strong>
	  <%= @user.current_login_ip %>
	</p>
</div>