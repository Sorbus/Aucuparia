$primary-background-new: rgba(235, 236, 237, 1);
$primary-background: rgba(239, 237, 235, 1);
$secondary-background: rgba(238, 238, 238, .9);
$primary-foreground: rgba(118, 92, 57, 1);
$secondary-foreground: rgba(132, 107, 77, 1);
$tertiary-foreground: rgba(78, 61, 38, 1);

@mixin transition($time, $attribute) {
	-moz-transition: $attribute $time ease-in-out;
	-webkit-transition: $attribute $time ease-in-out;
	-o-transition: $attribute $time ease-in-out;
	-ms-transition: $attribute $time ease-in-out;
	transition: $attribute $time ease-in-out;
	}

.form_tags {
	div.tagsinput {
		border:1px solid $primary-foreground;
		padding:5px;
		width:auto;
		height:5em;
		overflow-y:auto;
		}
	div.tagsinput span.tag {
		margin: .1em .2em;
		padding: .1em 0em .1em .6em;
		border: 1px solid $primary-foreground;
		border-radius: 0%;
		background-color: $secondary-background;
		color: $primary-foreground;
		text-decoration:none;
		font-style:normal;
		float:left;
		display:block;
		}
	div.tagsinput span.tag a {
		font-weight: bold;
		text-transform:uppercase;
		text-decoration:none;
		font-size: 11px;
		padding:.2em 1em .2em 0em; 
		} 
	div.tagsinput input {
		width:80px; margin:0px;
		font-family: helvetica;
		font-size: 13px;
		border:1px solid transparent;
		padding:5px; background:
		transparent; outline:0px;
		margin-right:5px;
		margin-bottom:5px;
		}
	div.tagsinput div {
		display:block; float: left; } 
	.tags_clear {
		clear: both; width: 100%; height: 0px; }
	.not_valid {
		background: #FBD8DB !important;
		color: #90111A !important;
		}
	}

.expand {
	overflow:hidden;
	max-height:2.4em;
	padding-bottom:.2em;
	@include transition(0.5s, all);
	
	&:hover {
		max-height:10em;
		}
	}
	
.tags {
	overflow: auto;
	padding-bottom: .2em;

	.heading {
		float:left;
		display:block;
		margin-top:.5em;
		}

	.tag {
		float:left;
		display:block;
		margin-top:.5em;
		
		a {
			margin: .1em .2em;
			padding: .1em .6em;
			border: 1px solid $primary-foreground;
			border-radius: 0%;
			background-color: $secondary-background;
			color: $primary-foreground;
			text-decoration:none;
			font-style:normal;
			
			&:hover {
				color: $primary-background;
				background-color: $secondary-foreground;
				}
			}
		}
	}