<% content_for :head do %>
	<title>Change</title>
<% end %>

<div class="content">
	<p class="definition">
		<strong>Change</strong> - <em>v</em>. To become different.
	</p>
	<%= form_for @user, url: profile_path do |f| %>
		<% if @user.errors.any? %>
			<div id="error_explanation">
				<h2>
					<%= pluralize(@user.errors.count, "error") %> prohibited this article from being saved:
				</h2>
				<ul>
					<% @user.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
		<p>
			<%= f.label :display_name %>
			<%= f.text_field :display_name %>
		</p>
		<p>
			<%= f.label :website %>
			<%= f.text_field :website %>
		</p>
		<p>
			<%= f.label :biography %>
			<%= f.text_area :biography %>
		</p>
		<p>
			<%= f.submit "Commit" %>
		</p>
	<% end %>
	<p>
		<%= link_to 'Modify Account Settings', edit_user_registration_path %>
	</p>
</div>