<% content_for :head do %>
	<title><%= @page.title %></title>
<% end %>

<div class="content" id="main">
	<span class="actions">
		<% if can? :update, @page %>
			<%= link_to 'Change', edit_admin_core_path(@page) %>
		<% end %>
	</span>
	<%= markdown(@page.content).html_safe %>
	<%= render 'logolinks' %>
</div>