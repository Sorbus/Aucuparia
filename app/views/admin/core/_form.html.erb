<%= form_for @page, url: admin_core_path(@page.id) do |f| %>
	<% if @page.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@page.errors.count, "error") %> prohibited your changes from being saved:
			</h2>
			<ul>
				<% @page.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	
	<p>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</p>
			
	<p>	
		<%= f.label :content %><br>
		<%= f.text_area :content %>
	</p>
		
	<p>
		<% f.submit 'preview', class: "left" %>
		<%= f.submit 'commit', class: "right" %>
	</p>
	&nbsp
<% end %>