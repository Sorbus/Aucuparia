.content.narrow
  %p.definition
    = t(:change_definition).html_safe
  = form_for @comment, url: item_comment_path(@comment.item_id, @comment) do |f|
    - if @comment.errors.any?
      #error_explanation
        %h2
          = pluralize(@comment.errors.count, "error") + ' ' + t(:save_failed)
        %ul
          - @comment.errors.full_messages.each do |msg|
            %li= msg
    %p
      - f.label :comment
      = f.text_area :body
    %p
      - f.submit t(:preview), class: "left"
      = f.submit t(:commit), class: "right"
    \&amp;nbsp
