<label for="show-menu" class="show-menu">Show Menu</label>
<input type="checkbox" id="show-menu" role="button">

<header>
	<ul class="menu">
		<li><%= link_to t(:home_nav), root_path, :remote => true %></li>
		<li><%= link_to t(:about_nav), about_path, :remote => true %></li>
		<% Menu.find_each do |menu| %>
			<% if menu.visible? %>
				<li><%= link_to menu.title, '#' %>
				<ul class="submenu">
					<% menu.categories.each do |category| %>
						<li><%= link_to category.name, category_path(category), :remote => true %></li>
					<% end %>
				</ul></li>
			<% end %>
		<% end %>
	</ul>
	<span class="clear"></span>
</header>