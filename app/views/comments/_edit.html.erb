<div class="content">
	<p class="definition">
		<strong>Change</strong> - <em>v</em>. To become different.
	</p>
	<%= form_for @comment, url: item_comment_path(@comment.item_id, @comment) do |f| %>
		<% if @comment.errors.any? %>
			<div id="error_explanation">
				<h2>
					<%= pluralize(@comment.errors.count, "error") %> prohibited this article from being saved:
				</h2>
				<ul>
					<% @comment.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>

		<p>
			<% f.label :new_comment %>
			<%= f.text_area :body %>
		</p>
			
		<p>
			<% f.submit 'preview', class: "left" %>
			<%= f.submit 'commit', class: "right" %>
		</p>
		&nbsp
	<% end %>
</div>