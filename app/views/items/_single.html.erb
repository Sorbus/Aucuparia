<div class="entry">
	<span class="actions">
		<%= item.created_at.strftime("%a %b %d, %Y") %><br>
		<% if can? :update, item %>
			<%= link_to '<i class="fa fa-pencil-square-o fa-lg"></i>'.html_safe, edit_item_path(item) %>
			<span class="htab"></span>
			<%= link_to '<i class="fa fa-times fa-lg"></i>'.html_safe, item_path(item),method: :delete,data: { confirm: 'Are you sure?' } %>
		<% end %>
	</span>
	<div class="title">
		<%= link_to item.title, item_path(item), :remote => true %>
		<span class="byline">by <%= link_to item.user.display_name, user_path(item.user.id), :remote => true %></span>
	</div>
	<div class="sample">
		<%= markdown(item.summary).html_safe %>
	</div>
</div>