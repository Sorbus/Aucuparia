$primary-background-new: rgba(235, 236, 237, 1);
$primary-background: rgba(239, 237, 235, 1);
$secondary-background: rgba(238, 238, 238, .9);
$primary-foreground: rgba(118, 92, 57, 1);
$secondary-foreground: rgba(132, 107, 77, 1);
$tertiary-foreground: rgba(78, 61, 38, 1);
$prime-alert-background: rgba(201, 32, 30, 1);
$alert-background: rgba(227, 194, 194, 1);
$view-max-width: 25em;

@mixin boxy {
	max-width:$view-max-width;
	margin:0px auto;
	text-align:left;
	border:1px solid $primary-foreground;
	background-color: $secondary-background;
	color:$primary-foreground;
	margin-bottom:20px;
	}

@mixin transition($time, $attribute) {
	-moz-transition: $attribute $time ease-in-out;
	-webkit-transition: $attribute $time ease-in-out;
	-o-transition: $attribute $time ease-in-out;
	-ms-transition: $attribute $time ease-in-out;
	transition: $attribute $time ease-in-out;
	}

@mixin animation($time, $name){
	animation: $name $time;
    -moz-animation: $name $time;
    -webkit-animation: $name $time;
    -o-animation: $name $time;
	-ms-animation: $name $time;
	}

@mixin session-core($side) {
	text-align:center;
	float:$side;
	padding-top:1em;
	padding-bottom:1em;
	border:1px solid $primary-foreground;
	background-color: $secondary-background;
	opacity:0.5;
	z-index:0;
	position:relative;
	}

@mixin slide-in ($distance) {
	opacity:1;
	margin-top:$distance;
	z-index:5;
	}

@charset 'UTF-8';
@import url('//fonts.googleapis.com/css?family=Source+Sans+Pro:400,400italic,700,900');
 
body {
	margin-top:5%;
	margin-bottom:100px;
	padding:0px;
	text-align:center;
	background-color: $primary-background-new;
	}
	
.cover {
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0px;
	left: 0px;
	z-index:-1;
	background-image: url('/static/background_optimized_editted.svg');
	background-size: cover;
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	filter: progid:DXImageTransform.Microsoft.AlphaImageLoader(src='.myBackground.jpg', sizingMethod='scale');
	-ms-filter: "progid:DXImageTransform.Microsoft.AlphaImageLoader(src='myBackground.jpg', sizingMethod='scale')";
	background-repeat: no-repeat;
	background-position: bottom right;
	}
	
.refresh {
	position: fixed;
	z-index: 10;
	left: 45%;
	right: 45%;
	color: $primary-foreground;
	}
	
.faded {
	opacity:0.5;
	}
	
#yield {
	@include transition(0.2s, all);
	}
	
.content, .comments, header {
	-webkit-box-shadow: 10px 10px 5px 0px rgba(0,0,0,0.25);
	-moz-box-shadow: 10px 10px 5px 0px rgba(0,0,0,0.25);
	box-shadow: 10px 10px 5px 0px rgba(0,0,0,0.25);
	}
	
.nav {
	a {
		margin:0em 1em 0em 0em;
		}
	}
	
.content, .comments {
	@include boxy;
	text-align:left;
	padding:15px;
	position:relative;
	z-index:3;
	margin-bottom:20px;
	overflow:auto;
		
	p:first-of-type {
		margin-top:0px;
		}
		
	.alert {
		border:.3em dashed red;
		color:red;
		padding:.7em;
		text-align:center;
		}
	}

.created {
	float:right;
	text-align:right;
	opacity:0.5;
	margin-top:0.5em;
	@include transition(0.25s, all);
	
	&:hover {
		opacity:1;
		}
	}
	
.fade {
	opacity:.5;
	@include transition(0.25s, all);
	
	&:hover {
		opacity:1;
		}
	}

.category {
	float:left;
	text-align:right;
	opacity:.5;
	margin-top:0.5em;
	@include transition(0.5s, all);
	
	&:hover {
		opacity:1;
		}
	}
	
.title {
	margin-top:0.5em;
	}

.actions {
	float:right;
	opacity:0.5;
	font-size:small;
	margin-left:1em;
	@include transition(0.5s, all);
	text-align:right;
	
	&:hover {
		opacity:1;
		}
		
	a {
		margin-left:1em;
		
		&:first-of-type {
			margin-left:0em;
			}
		}
	}
	
footer {
	display: block;
	width: 100%;
	position: fixed;
	bottom: 0;
	text-align: center;
	background-color: rgba(255,255,255,.5);
	
	.bottom {
		padding: .5em 0 .5em 0;
		display: inline-block;
		z-index: 1;
		}
	
	.tools 	{
		margin-top: .5em;
		margin-bottom: .5em;
		margin-right: 1em;
			
			a {
				margin-left:1em;
				
				.fa-twitter {
					@include transition(0.2s, all);
					
					&:hover {
						color:#55acee;
					}
				}
			}
		}
	}

/* Utility styles */
	
.dangerous {
	border: 1px solid red;
	margin-top: 1em;
	padding: 0em 1em 1em 1em;
	}
	
.unpublished {
	background-color: $alert-background;
	}
	
p	{
	text-align:justify;
	margin-bottom:0px;
	}
	
a	{
	font-style: italic;
	text-decoration: underline;
	color: $secondary-foreground;
	@include transition(0.25s, color);
	
	&:hover {
		text-decoration: none;
		color: $primary-foreground;
		}
	}
		
strong, b {font-weight: 700;}

em, i {font-style: italic;}
	
mark {color: $primary-foreground;}
	
blockquote {
	border-left: solid 0.5em #ddd;
	padding: 1em 0 1em 1em;
	font-style: italic;
	margin-top: 0.7em;
	margin-bottom: 0.7em;
	margin-left: 1em;
	}

hr {
	border: 0;
	border-top: solid 1px #ddd;
	}
	
sub {
	position: relative;
	top: 0.5em;
	font-size: 0.8em;
	}
	
sup {
	position: relative;
	top: -0.5em; 
	font-size: 0.8em;
	}
	
ul.dashed {
	list-style: none;
	margin-left: 0;
	padding-left: 1em;
	
	li:before {
		display: inline-block;
		content: "-";
		width: 1em;
		margin-left: -1em;
		}
	}
	
span.tab{padding: 0 1em;}
span.htab{padding: 0 0.5em;}
span.qtab{padding: 0 0.25em;}
	
span.clear {
	clear: left;
	display: block;
	}

.footnotes ol {
	font-size:small;
	}

.user-image {
	border-radius:0% 50% 0% 50%;
	border: 0px solid $primary-foreground;
	margin-right: .5em;
	}
	
.user-4x {
	width:4em;
	height:4em;
	}
	
.user-2x {
	width:2em;
	height:2em;
	}
	
.user-1x {
	width:1em;
	height:1em;
	}
	
.user i {float:left;}
.username i {float:right;}

.definition {text-align:justify;}
.navigation {text-align:center;}
	
.deleted {opacity:.5;}
.hidden {display:none!important;}
.left{float:left;}
.right{float:right;}/*Don't look at me, senpai! -Right Shark-chan */
	
.devise-actions {
	margin-left: .5em;
	margin-top: -.5em;
	
	.box {
		width:2em;
		float:left;
		padding:.5em;
		height:2em;
		overflow:hidden;
		@include transition(.3s, all);
		
		&:first-of-type {
			padding-left:0em;
			}
		}
	}


/*Responsive Styles*/

@media screen and (max-width : 30em){
	body {
		margin-top:0px;
		margin-bottom:2em;
	}
	
	.content, .comments, .account {
		-webkit-box-shadow: 0px 10px 5px 0px rgba(0,0,0,0.25);
		-moz-box-shadow: 0px 10px 5px 0px rgba(0,0,0,0.25);
		box-shadow: 0px 10px 5px 0px rgba(0,0,0,0.25);
		}
	
	header {
		-webkit-box-shadow: 10px 10px 5px 0px rgba(0,0,0,0);
		-moz-box-shadow: 10px 10px 5px 0px rgba(0,0,0,0);
		box-shadow: 10px 10px 5px 0px rgba(0,0,0,0);
		}
	
	.cover {
		display:none;
		}
		
	.created {
		float:left;
		text-align:left;
		}
	}
	
