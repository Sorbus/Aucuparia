<% if current_user %>
	<div class="account">
		<div class="tools">
			<%= link_to current_user.display_name, profile_path %>
			<span class="qtab"></span>|<span class="qtab"></span>
			<%= link_to 'edit', edit_profile_path %>
			<% if can? :update, Core %>
				<span class="qtab"></span>|<span class="qtab"></span>
				<%= link_to 'admin tools', admin_root_path %>
			<% end %>
		</div>
		<div class="logout">
			<%= link_to :logout, user_session_path,method: :delete,data: { confirm: 'Are you sure?' } %>
		</div>
		&nbsp
	</div>
<% elsif Core.first.show_login? %>
	<div class="holder">
		<div class="login">
			<%= link_to :login, login_path %>
			<span class="tab"></span>
			<%= link_to :register, register_path %>
		</div>
	</div>
<% end %>