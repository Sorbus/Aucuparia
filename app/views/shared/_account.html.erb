	<% if current_user %>
	<div class="account">
		<div class="tools">
			<%= link_to '<i class="fa fa-user fa-lg"></i>'.html_safe + ' ' + current_user.display_name, profile_path %>
		</div>
		<div class="logout">
			<% if can? :update, Core %>
				<span class="qtab"></span>
				<%= link_to '<i class="fa fa-gears fa-lg"></i>'.html_safe, admin_root_path %>
			<% end %>
			<span class="htab"></span>
			<%= link_to '<i class="fa fa-gear fa-lg"></i>'.html_safe, edit_profile_path %>
			<span class="htab"></span>
			<%= link_to '<i class="fa fa-user-times fa-lg"></i>'.html_safe, destroy_user_session_path, method: :delete,data: { confirm: 'Are you sure?' } %>
		</div>
		&nbsp
	</div>
<% elsif Core.first.show_login? && (controller_name != 'sessions') && (controller_name != 'registrations') %>
	<div class="holder">
		<div class="login">
			<%= link_to '<i class="fa fa-user fa-lg"></i>'.html_safe, new_user_session_path %>
			<span class="tab"></span>
			<%= link_to '<i class="fa fa-user-plus fa-lg"></i>'.html_safe, new_user_registration_path %>
		</div>
	</div>
<% end %>