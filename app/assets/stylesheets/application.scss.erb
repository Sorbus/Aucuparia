a	{
		font-style: italic;
		text-decoration: underline;
		color: $secondary-foreground;
		@include transition(0.25s, color)
	}
	
a:hover {
		text-decoration: none;
		color: $primary-foreground;
	}
	
strong, b {
		font-weight: 700;
		color: #484d55;
	}
	
mark {
		font-color: $primary-foreground;
}
	
blockquote {
		border-left: solid 0.5em #ddd;
		padding: 1em 0 1em 1em;
		font-style: italic;
		margin-top: 0.7em;
		margin-bottom: 0.7em;
		margin-left: 1em;
	}
	
em, i {
		font-style: italic;
	}
	
hr {
		border: 0;
		border-top: solid 1px #ddd;
	}
	
sub {
		position: relative;
		top: 0.5em;
		font-size: 0.8em;
	}
	
sup {
		position: relative;
		top: -0.5em; 
		font-size: 0.8em;
	}
	
ul.dashed {
		list-style: none;
		margin-left: 0;
		padding-left: 1em;
	}

ul.dashed li:before {
		display: inline-block;
		content: "-";
		width: 1em;
		margin-left: -1em;
	}
	
span.tab{
		padding: 0 1em;
	}
	
span.htab{
		padding: 0 0.5em;
	}

span.qtab{
		padding: 0 0.25em;
	}
	
span.clear { clear: left; display: block; }

.user-image {
		border-radius:0% 50% 0% 50%;
		border: 0px solid $primary-foreground;
	}
	
.user-4x {
		width:4em;
		height:4em;
	}
	
.user-2x {
		width:2em;
		height:2em;
	}
	
.user-1x {
		width:1em;
		height:1em;
	}
		
.wrapper {
		display: block;
		width: 100%;
		position: fixed;
		bottom: 0;
		text-align: center;
	}

.bottom {
		padding: 0 4px;
		padding-bottom: 20px;
		display: inline-block;
		z-index: 1;
	}
	
.deleted {opacity:.5;}

.left {float:left;}

.right {float:right;} /*Don't look at me, senpai! -Right Shark-chan */

/*Responsive Styles*/

@media screen and (max-width : 30em){
	body {
		margin-top:0px;
		margin-bottom:0px;
	}
	
	.cover {
	
		.left, .right {
			display:none;
			}
		}
		
	.holder {
		@extends .account;
		

		.login {
				width:100%;
				margin-top:20px;
				z-index:2;
			}
			
		.login:hover {
				opacity:1;
				margin-top:20px;
				z-index:5;
			}
		}
	}

